{
    "compilerOptions": {
        "lib": ["ESNext", "DOM", "WebWorker", "dom.iterable"],
        "target": "ESNext",
        "module": "ESNext",
        "declaration": true,
        "declarationDir": "./lib",
        "declarationMap": true,
        "experimentalDecorators": true,
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "sourceMap": true,
        "moduleResolution": "Bundler",
        "resolveJsonModule": true,
        "strict": true,
        "strictPropertyInitialization": true,
        "noImplicitOverride": true,
        "allowJs": true,
        "skipLibCheck": true,
        "types": ["jest", "node", "@types/jest", "esbuild-style-plugin"]
    },
    "include": ["packages/*/src", "examples/*/src"]
}
