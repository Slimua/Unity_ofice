{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "isolatedModules": true,
        "allowJs": true,
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "types": ["node", "esbuild-style-plugin"]
    },
    "include": ["src"]
}
