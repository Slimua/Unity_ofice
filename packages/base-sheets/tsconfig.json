{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "rootDir": "./",
        "outDir": "lib",
        "moduleResolution": "Node", //This value is needed for Node.js.
        "baseUrl": "./",
        "paths": {
            "@*": [
                "src/*"
            ]
        },
        "esModuleInterop": true, // auto allowSyntheticDefaultImports true
        "strictPropertyInitialization": false
    }
}