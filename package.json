{
    "name": "univer",
    "version": "1.0.0-pre-alpha",
    "description": "Univer, Luckysheet 2.0 upgrade version",
    "private": true,
    "scripts": {
        "test": "turbo jest -- --passWithNoTests",
        "test:legacy": "node scripts/test",
        "test:e2e": "pnpm run --filter @univerjs/base-sheets test:play",
        "dev:sheet": "turbo dev:demo --filter ./examples/univer-sheet-ts",
        "dev:slide": "turbo dev:demo --filter ./examples/univer-slide-ts",
        "dev:doc": "turbo dev:demo --filter ./examples/univer-doc-ts",
        "dev": "turbo dev:demo --filter ./examples/univer-doc-ts --filter ./examples/univer-sheet-ts --filter ./examples/univer-slide-ts",
        "api": "node scripts/api",
        "lighthouse-dev": "start /B node scripts/dev && lighthouse http://127.0.0.1:3103 --output html --output-path ./report.html",
        "build:legacy": "node scripts/build.js",
        "build": "turbo esbuild",
        "build:demo": "turbo esbuild:demo",
        "build:customd": "cd cli/src/templates/univer-custom-build && npm run build:d",
        "clean": "npm cache clean --force && node scripts/clean.js && pnpm install",
        "node-server": "node scripts/server.js",
        "univer-cli": "cd cli && npm run cli",
        "postinstall": "node scripts/postinstall.js",
        "prepare": "husky install",
        "pre-commit": "lint-staged",
        "lint": "eslint --cache packages/**/src/**/*.{tsx,ts}",
        "lint:fix": "eslint packages/**/src/**/*.{tsx,ts} --fix"
    },
    "engines": {
        "node": "^16.20.0",
        "pnpm": "^8.6.2"
    },
    "author": "DreamNum <developer@univer.ai>",
    "license": "MIT",
    "devDependencies": {
        "@changesets/cli": "^2.22.0",
        "@commitlint/cli": "^17.6.5",
        "@commitlint/config-conventional": "^17.6.5",
        "@microsoft/api-documenter": "^7.18.1",
        "@microsoft/api-extractor": "7.25.0",
        "@playwright/test": "^1.18.1",
        "@types/jest": "28.1.8",
        "@types/node": "^18.14.0",
        "@types/numeral": "^2.0.2",
        "@typescript-eslint/eslint-plugin": "^6.6.0",
        "@typescript-eslint/parser": "^6.6.0",
        "cross-env": "^7.0.3",
        "esbuild": "^0.19.2",
        "esbuild-plugin-clean": "^1.0.1",
        "esbuild-plugin-copy": "^2.1.1",
        "esbuild-style-plugin": "^1.6.2",
        "eslint": "^8.35.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-import-resolver-typescript": "^3.5.3",
        "eslint-plugin-import-newlines": "^1.3.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-simple-import-sort": "^10.0.0",
        "eslint-plugin-unused-imports": "^2.0.0",
        "execa": "^4.1.0",
        "husky": "^8.0.1",
        "jest": "29.0.0",
        "lighthouse": "^9.4.0",
        "lint-staged": "^14.0.1",
        "minimist": "^1.2.8",
        "prettier": "^2.3.2",
        "rimraf": "^3.0.2",
        "tree-kill": "^1.2.2",
        "ts-jest": "29.0.1",
        "ts-node": "^10.9.1",
        "turbo": "^1.10.13",
        "typescript": "^5.2.2"
    },
    "lint-staged": {
        "**/*.{js,ts,tsx}": [
            "eslint --fix"
        ]
    }
}
